<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/InnerTTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/Carview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/InnerTTT">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/InnerIMG"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="5dp" />


                <TextView
                    android:id="@+id/sbm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/InnerIMG"
                    android:layout_margin="5dp"
                    android:text="@string/inner_fanhao"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerFanhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/InnerIMG"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/sbm"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/fxfj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/InnerIMG"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/InnerFanhao"
                    android:text="@string/inner_faxingshijian"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerFXSJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/InnerIMG"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/fxfj"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/ypcd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/InnerIMG"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/InnerFXSJ"
                    android:text="@string/inner_changdu"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerYPCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/InnerIMG"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/ypcd"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/zzs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ypcd"
                    android:layout_margin="5dp"
                    android:text="@string/inner_zhizhaoshang"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerZZS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/fxs"
                    android:layout_alignTop="@id/zzs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/zzs" />


                <TextView
                    android:id="@+id/fxs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zzs"
                    android:layout_margin="5dp"
                    android:text="@string/inner_faxingshang"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerFXS"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/dy"
                    android:layout_alignTop="@+id/fxs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/fxs" />


                <TextView
                    android:id="@+id/dy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fxs"
                    android:layout_margin="5dp"
                    android:text="@string/inner_daoyan"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerDY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/lb"
                    android:layout_alignTop="@+id/dy"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/dy" />

                <TextView
                    android:id="@+id/lb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dy"
                    android:layout_margin="5dp"
                    android:text="@string/inner_lebie"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerLB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/lb"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/lb" />

                <TextView
                    android:id="@+id/XL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb"
                    android:layout_margin="5dp"
                    android:text="@string/系列"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/InnerXL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/XL"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/XL" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Carview"
            android:layout_margin="5dp"
            android:text="@string/inner_yanyuan" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/InnerRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yy" />

        <TextView
            android:id="@+id/yptx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/InnerRec"
            android:layout_margin="5dp"
            android:text="@string/inner_simple" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yptx"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="2" />

    </RelativeLayout>
</ScrollView>